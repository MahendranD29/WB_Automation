<?xml version="1.0" encoding="UTF-8"?>
<extentreports>
    <configuration>
        <theme>standard</theme>
        <encoding>UTF-8</encoding>
        <protocol>https</protocol>
        <documentTitle>Automation Test Report</documentTitle>
        <reportName>Cucumber TestNG Framework</reportName>
        <timestampFormat>MMM dd, yyyy HH:mm:ss</timestampFormat>

        <!-- Screenshot configuration -->
        <screenshotRelativePath>./screenshots/</screenshotRelativePath>

        <!-- CSS for better screenshot display -->
        <styles>
            <![CDATA[
                .screenshot { max-width: 100%; border: 1px solid #ddd; border-radius: 4px; padding: 5px; }
                .test-heading { background-color: #f8f9fa; padding: 10px; border-radius: 5px; }
            ]]>
        </styles>
    </configuration>
</extentreports>